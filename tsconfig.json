{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "types": [
      "node",
      "@types/jest"
    ],
    "typeRoots": [
      "node_modules/@types",
    ],
    "lib": [
      "ESNext"
    ],
    "paths": {
      "~/*": [
        "./src/*"
      ],
    },
    "rootDir": "./"
  },
}